<% include ../partials/header %>
<div class="container">
	<header class="jumbotron">
		<div>
			<h1>Welcome to the market!!!</h1>
			<!-- <a class = "btn btn-primary" href = "/">Back to Home page.</a> -->
			<h4>Pick whatever you want to have, and post whatever you want to sell!</h4>
			<p>
				<a class="btn btn-success" href="/campgrounds/new">Add a new item!!!</a>
			</p>
		</div>
	</header>


	<div class="row text-center" style="display: flex; flex-wrap: wrap;">
		<% campgrounds.forEach(function(campground){ %>
		<div class="col-md-3 col-sm-4">
			<div class="thumbnail">
				<img src=" <%= campground.image %> ">
				<div class="caption">
					<h3>
						<%= campground.name %>
					</h3>
				</div>
				<p>
					<a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">Show me more</a>
				</p>
			</div>
		</div>
		<% }); %>
	</div>
</div>

<% include ../partials/footer %>