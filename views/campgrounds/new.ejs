<% include ../partials/header %>

<div class="container">
	<div class="row">
		<h1 style="text-align: center">Add a new dream item!!!</h1>
		<div>
			<form action="/campgrounds" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="name" placeholder="Name of the item is...">
				</div>

				<div class="form-group">
					<input class="form-control" type="text" name="image" placeholder="copy-paste to here the url of the image of the item">
				</div>

				<div class="form-group">
					<div class="input-group">
						<span class="input-group-addon">$</span>
						<input class="form-control" type="number" name="price" placeholder="how much money do you want to charge for this?"
						 min="0.01" step="0.01">
					</div>
				</div>

				<div class="form-group">
					<textarea class="form-control" rows="3" name="description" placeholder="Describe a little bit about the item, like shapes, colors etc."></textarea>
				</div>

				<div class="form-group">
					<button class="btn btn-primary btn-lg btn-block">OK!!!</button>
				</div>
			</form>

			<a href="/campgrounds">Back to the page for all campgrounds.</a>
		</div>
	</div>
</div>

<% include ../partials/footer %>